@import '../../../common.styl'

.screen
  background white
  max-width 2000px

.screenWrapper
  width 100%
  padding-top 10px
  padding-right 10px
  padding-bottom 10px

.table
  display flex
  flex-direction column
  padding-right 20px
  padding-left 20px
  padding-bottom 20px

.head
  display block
  width 100%
  padding 10px

.row
  display flex
  width 100%
  div
    display flex
    min-width 20%

.body
  display flex
  flex-direction: column
  background white

.pagination
  display flex
  gap 10px
  justify-content center
  padding-bottom 20px
